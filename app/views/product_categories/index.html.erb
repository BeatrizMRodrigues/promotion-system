<%= link_to 'Voltar', root_path%>
<%= link_to 'Cadastrar nova categoria', new_product_category_path%>

<h1>Categoria de Produtos</h1>

<% if @product_categories.empty? %>
    <h3>Nenhuma categoria cadastrada</h3>
<%end%>

<ul>
<% @product_categories.each do |category|%>
<li>
<%= category.name%>
</li>
<li>
<%= category.code%>
</li>
<li>
<%= link_to 'Editar categoria', edit_product_category_path(category)%>
</li>
<li>
<%= link_to 'Apagar categoria', product_category_path(category), method: :delete%>
</li>
<% end %>
</ul>